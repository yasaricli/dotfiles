# footer template
hardstatus alwayslastline
hardstatus string '%{= kG}[ %{G}%H %{g}][%= %{= kw}%?%-Lw%?%{r}(%{W}%n*%f%t%?(%u)%?%{r})%{w}%?%+Lw%?%?%= %{g}][%{B} %m-%d %{W}%c %{g}]'

# Disable the startup message
startup_message off

# Set a large scrollback buffer
defscrollback 32000

multiuser on
acladd root

# Always start `screen` with UTF-8 enabled (`screen -U`)
defc1 off
defutf8 on
